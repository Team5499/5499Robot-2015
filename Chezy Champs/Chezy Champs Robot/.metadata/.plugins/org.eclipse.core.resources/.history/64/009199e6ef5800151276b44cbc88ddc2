
package org.usfirst.frc.team5499.robot.subsystems;

import org.usfirst.frc.team5499.robot.Robot;
import org.usfirst.frc.team5499.robot.RobotMap;

import edu.wpi.first.wpilibj.CANTalon;
import edu.wpi.first.wpilibj.command.Subsystem;

/**
 *
 */
public class GrabberSubsystemConveyor extends Subsystem {
    
    // Put methods for controlling this subsystem
    // here. Call these from Commands.
	
	CANTalon RIGHT_MOTOR = new CANTalon(RobotMap.RIGHT_INTAKE_MOTOR_IND);
	CANTalon LEFT_MOTOR = new CANTalon(RobotMap.LEFT_INTAKE_MOTOR_IND);
	private boolean isActive = false;

    public void initDefaultCommand() {
        // Set the default command for a subsystem here.
        //setDefaultCommand(new MySpecialCommand());
    }
    
    /**
     * 
     * @param buttonIn the raw output from the button to controll the intake start/stop
     */
    public void startStop(boolean buttonIn){
    	if(isActiveIn){
    		isActive ^= true;
    	}
    	
    	while(isActive){
    		RIGHT_MOTOR.set(70);
    		LEFT_MOTOR.set(70);
    	}
    }
}

